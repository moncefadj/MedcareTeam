<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePatient.PatientProfile"
    android:orientation="vertical"
    android:background="@drawable/background">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:id="@+id/linear1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_doc_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/doctor_vector_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="105dp"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/colorPrimaryDark"/>
</LinearLayout>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Nom"
        android:textColor="@color/white"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        android:layout_below="@+id/linear1"
        app:endIconMode="clear_text"
        app:endIconTint="@color/white" />

    <EditText
        android:id="@+id/edit_mdp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/edit_name"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:maxLength="12"
        app:counterEnabled="true"
        app:counterMaxLength="12"
        app:counterTextColor="@color/white"
        app:endIconMode="password_toggle" />

    <EditText
        android:id="@+id/edit_adress"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_baseline_place_24"
        android:drawablePadding="10dp"
        android:hint="Adresse"
        app:endIconMode="clear_text"
        app:errorEnabled="true" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        app:endIconMode="clear_text" />

    <android.widget.Button
        android:id="@+id/button_confirm"
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:background="@drawable/backgraoudbuttob"
        android:onClick="envoyer"
        android:text="Modifier"
        android:textColor="@color/rose"
        tools:ignore="OnClick" />

</LinearLayout>
