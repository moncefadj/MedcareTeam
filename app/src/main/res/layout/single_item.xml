<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
  >

    <LinearLayout
        android:id="@+id/entreNom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/list_item_back"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="83dp"
            android:layout_height="81dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/medicon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/nameitem"
                    android:layout_width="222dp"
                    android:layout_height="match_parent"
                    android:text="nom de medicament
"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/close_sign"
                    tools:ignore="VectorDrawableCompat" />


            </LinearLayout>

            <TextView
                android:id="@+id/descriptionitem"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="description" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timeitem"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="temps" />

                <TextView
                    android:id="@+id/timeitem2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="temps2" />

                <TextView
                    android:id="@+id/timeitm3"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="temps3" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>