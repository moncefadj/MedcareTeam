<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePatient.PatientProfile"
    android:orientation="vertical"
    android:background="@drawable/rose">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:padding="20dp"

        >

        <ImageView
            android:id="@+id/iback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_ios" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-medium"
            android:text="Personal Data"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_baseline_person"
            app:shapeAppearanceOverlay="@style/cicular" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/k"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="240dp"
            android:layout_height="56dp"
            android:layout_below="@id/c"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/a"
            android:hint="nom"
            android:textColorHint="@color/white"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:counterTextColor="@color/white"
            app:endIconMode="clear_text"
            app:endIconTint="@color/white"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inom"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/ic_baseline_person"
                android:drawablePadding="10dp"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="243dp"
            android:layout_height="50dp"
            android:layout_below="@id/k"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/a"
            android:hint="mot de passe"
            android:textColorHint="@color/white"
            app:counterEnabled="true"
            app:counterMaxLength="12"
            app:counterTextColor="@color/white"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/imotdepass"
                android:layout_width="238dp"
                android:layout_height="43dp"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:background="@drawable/patient_profile_bg"
        android:orientation="vertical">


        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="100dp"
             android:calendarViewShown="false"
            android:datePickerMode="spinner"

            />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginTop="5dp"
            android:hint="date de naissance"
            android:paddingHorizontal="10dp"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:maxLength="10" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="398dp"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:hint="l'adresse"
            android:paddingHorizontal="10dp"
            app:endIconMode="clear_text"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/iadresse"
                android:layout_width="398dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="5dp"
            android:hint="numero"
            android:paddingHorizontal="10dp"
            app:counterEnabled="true"
            app:counterMaxLength="9"
            app:endIconMode="clear_text"
            app:prefixText="+213"
            app:prefixTextColor="@color/purple_700">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:drawablePadding="10dp"
                android:inputType="number"
                android:maxLength="9" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="e mail"
            android:paddingHorizontal="10dp"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/iemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <android.widget.Button

            android:id="@+id/button_confirm"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/backgraoudbuttob"
            android:onClick="envoyer"
            android:text="valider"
            android:textColor="@color/rose"
            tools:ignore="OnClick" />


    </LinearLayout>

</LinearLayout>

