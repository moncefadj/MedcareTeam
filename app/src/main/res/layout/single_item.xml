<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="50dp"
    android:id="@+id/meditem"
  >

    <LinearLayout
        android:id="@+id/entreNom"
        android:layout_width="match_parent"
        android:background="@drawable/list_item_back"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/medimg"
            android:layout_width="83dp"
            android:layout_height="81dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/medicon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/nameitem"
                    android:layout_width="222dp"
                    android:layout_height="match_parent"
                    android:text="nom de medicament"
                    android:fontFamily="@font/allerta"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <ImageButton
                    android:id="@+id/deletemed"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/close_sign"
                    android:backgroundTint="#000000" />

            </LinearLayout>

            <TextView
                android:id="@+id/descriptionitem"
                android:layout_width="match_parent"
                android:fontFamily="@font/allerta"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="description"
                android:textSize="18sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timeitem"
                    android:fontFamily="@font/allerta"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="temps"
                    android:textColor="@color/blue_app"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timeitem2"
                    android:fontFamily="@font/allerta"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="temps2"
                    android:textColor="@color/blue_app"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timeitm3"
                    android:fontFamily="@font/allerta"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="temps3"
                    android:textColor="@color/blue_app"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>