<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ffff"
        android:padding="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <ImageView
                android:id="@+id/ImagePatient"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/img_patient"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/NomPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/ImagePatient"
                android:text="Nom du Patient"
                android:textColor="#1C1C1C"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/NomPatient"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/ImagePatient"
                android:text="Heure de consultation"
                android:textColor="#707070"
                android:id="@+id/HeureRDV" />

            <ImageButton
                android:id="@+id/deleteImgBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="285dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/close_sign"
                android:backgroundTint="#000000" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
