<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePatient.PatientProfile"
    android:orientation="vertical"
    android:background="@drawable/rose"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:padding="20dp"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-6dp"
            android:fontFamily="sans-serif-medium"
            android:text="profile"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/iback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_ios"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/a"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_below="@id/c"
            android:src="@drawable/ic_baseline_person"
            app:shapeAppearanceOverlay="@style/cicular"
            />
        <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chaouch hanane"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_below="@id/a"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="algerie sba"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_below="@id/b"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:background="@drawable/patient_profile_bg"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="votre date de naissance"
            android:textColor="@color/rose"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:hint="date de naissance"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="votre addresse"
            android:textColor="@color/rose"
            android:layout_marginTop="30dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:hint="l'adresse" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="votre email"
            android:textColor="@color/rose"
            android:layout_marginTop="30dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="10dp"
            android:hint="e-mail" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="votre numero"
            android:textColor="@color/rose"
            android:layout_marginTop="30dp"/>
        <EditText
            android:id="@+id/n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:drawablePadding="10dp"
            android:hint="numero"
            />

        <android.widget.Button
            android:id="@+id/play"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="modifier"
            android:textColor="@color/rose"
            android:background="@drawable/backgraoudbuttob"
            />


    </LinearLayout>

</LinearLayout>