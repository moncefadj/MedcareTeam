<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePatient.PatientProfile"
    android:orientation="vertical"
    android:background="@drawable/background">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:id="@+id/linear1">

    <ImageView
        android:id="@+id/iback"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_arrow_back_ios" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_doc_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/doctor_vector_profile"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:orientation="vertical">

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Nom"
        android:textColor="@color/white"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:endIconMode="clear_text"
        app:endIconTint="@color/white" />


    <EditText
        android:id="@+id/edit_email"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        app:endIconMode="clear_text" />

     <EditText
         android:layout_width="300dp"
         android:layout_height="60dp"
         android:layout_marginTop="5dp"
         android:layout_gravity="center"
         android:paddingHorizontal="10dp"
         app:counterEnabled="true"
         app:counterMaxLength="9"
         app:endIconMode="clear_text"
         app:prefixText="+213"
         android:hint="Numéro de téléphone"
         app:prefixTextColor="@color/purple_700"
         android:id="@+id/edit_number"
         android:drawableLeft="@drawable/ic_baseline_phone_24"
         android:drawablePadding="10dp"
         android:inputType="number"
         android:maxLength="9" />

    <android.widget.Button
        android:id="@+id/save_button"
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:background="@drawable/backgraoudbuttob"
        android:onClick="envoyer"
        android:text="Modifier"
        android:textColor="@color/rose"
        tools:ignore="OnClick" />
    </LinearLayout>

</LinearLayout>
