<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp">


    <androidx.cardview.widget.CardView
        android:layout_width="384dp"
        android:layout_height="122dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="#ffff"
        android:padding="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="362dp"
            android:layout_height="105dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp">

            <ImageView
                android:id="@+id/image_medecin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_baseline_person_24"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/nom_medecin"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/image_medecin"
                android:text="Patient 1"
                android:textColor="#1C1C1C"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/description_medecin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_below="@+id/nom_medecin"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/image_medecin"
                android:text="Description"
                android:textColor="#707070" />

            <TextView
                android:id="@+id/speciality1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_medecin"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/image_medecin"
                android:text="Speciality"
                android:textColor="#707070" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
